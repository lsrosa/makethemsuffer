#include "CodeTemplate.h"
#include <iostream>
#include <assert.h>
#include <sstream>
#include <stdio.h>
#include <fcntl.h>
#include <llvm/Support/raw_ostream.h>
#include <llvm/Bitcode/ReaderWriter.h>

